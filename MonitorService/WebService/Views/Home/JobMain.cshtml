@using WebService.ModelsForView;
@model JobMain

<h3>Jobs</h3>
<hr width="30%" align="left" />
<br />
<div class="row">
    <div class="col">
        <form asp-controller="HomeController" asp-action="LogsMain" method="get">
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <input type="text" asp-for="SearchWord" class="form-control" id="inputfiltr" placeholder="Input parametr for searching of jobs">
                </div>
                <div class="form-group col-sm-2">
                    <input type="date" asp-for="StartTime" class="form-control" id="inputStartDate" placeholder="start">
                </div>
                <div class="form-group col-sm-2">
                    <input type="date" asp-for="EndTime" class="form-control" id="inputEndDate" placeholder="end">
                </div>
                <div class="form-group col-sm-2">
                    <button type="submit" class="btn btn-secondary">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark text-white">
                <tr>
                    <th>Extension Service Name</th>
                    <th>Extension Type</th>
                    <th>Library Name</th>
                    <th>Job State</th>
                    <th>Final Status</th>
                    <th>Queue Time</th>
                    <th>Messages</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var job in Model.Jobs)
                {
                    <tr>
                        <th>@job.ExtensionServiceName</th>
                        <th>@job.ExtensionType</th>
                        <th>@job.LibraryName</th>
                        <th>@job.JobState</th>
                        <th>@job.FinalStatus</th>
                        <th>@job.QueueTime</th>
                        <th>@job.Messages</th>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
   


    



