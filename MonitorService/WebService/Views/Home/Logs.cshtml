@using WebService.DataAccess.Models
@model List<Log>
<!DOCTYPE html>

    <h3>Logs</h3>
    <hr width="30%" align="left" />
    <br />
    <div class="row justify-content-around" >
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white bg-secondary col-md-2 rounded">Fatal</a>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white bg-dark col-md-2 rounded">Error</a>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white bg-secondary col-md-2 rounded">Warning</a>
     </div>
    <div class="row justify-content-center">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white bg-dark col-md-2 rounded">Info</a>
        <div class="col-md-2"></div>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link text-white bg-secondary col-md-2 rounded">Debug</a>
    </div>
    <br />
    <form>
        <div class="form-row">
            <div class="form-group col-md-6">
                <input type="text" class="form-control" id="inputfiltr" placeholder="Input parametr for searching of logs">
            </div>
            <div class="form-group col-md-2">
                <input type="date" class="form-control" id="inputStartDate" placeholder="start">
            </div>
            <div class="form-group col-md-2">
                <input type="date" class="form-control" id="inputEndDate" placeholder="end">
            </div>
            <div class="form-group col-md-2">
                <button type="submit" class="btn btn-secondary">Search</button>
            </div>
        </div>
    </form>
    
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark text-white">
            <tr>
                <th>Time Stamp</th>
                <th>Thread Id</th>
                <th>Log Message</th>
                <th>Method Name</th>
                <th>Log Content</th>
                <th>Machine Name</th>
                <th>Log Source</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Log log in Model)
            {
                <tr>
                    <th>@log.TimeStamp</th>
                    <th>@log.ThreadId</th>
                    <th>@log.LogMessage</th>
                    <th>@log.MethodName</th>
                    <th>@log.LogContent</th>
                    <th>@log.MachineName</th>
                    <th>@log.LogSource</th>
                    </tr>
                    }
            </tbody>
        </table>
