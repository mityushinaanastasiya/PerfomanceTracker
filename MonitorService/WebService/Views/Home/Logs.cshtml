@using WebService.DataAccess.Models
@model List<Log>
@if (Model.Any())
{
    <h3>@Model[0].LogMessage</h3>
}
@if (!Model.Any())
{
    <h3>There is no such logs.</h3>
}
<hr width="30%" align="left" />
<br />
@if (Model.Any())
{
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover" style="margin-right: 50%">
                <thead class="text-white" style="background-color: #94c8f7">
                    <tr>
                        <th style="width: 2%">Time Stamp</th>
                        <th style="width: 3%">Thread Id</th>
                        <th style="width: 3%">Log Message</th>
                        <th style="width: 5%">Method Name</th>
                        <th style="width: 5%">Log Content</th>
                        <th style="width: 4%">Machine Name</th>
                        <th style="width: 3%">Log Source</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Log log in Model)
                    {
                        <tr>
                            <th>@log.TimeStamp</th>
                            <th>@log.ThreadId</th>
                            <th>@log.LogMessage</th>
                            <th>@log.MethodName</th>
                            <th>@log.LogContent</th>
                            <th>@log.MachineName</th>
                            <th>@log.LogSource</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


